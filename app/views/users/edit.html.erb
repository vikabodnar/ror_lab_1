<%= form_for @user, method: :patch do |f| %>
<p><%=f.label "Firstname"%> </p>
<%= f.text_field :firstname %><br/>
<p><%=f.label "Lastname"%> </p>
<%= f.text_field :lastname %><br/>
<p><%=f.label :email %> </p>
<%= f.text_field :email %><br/>
<p><%=f.label :password %> </p>
<%= f.text_field :password %><br/>

<p><%=f.label :avatar %> </p>
<%= f.file_field :avatar %>

<%= f.submit "save" %>

<% end %>

